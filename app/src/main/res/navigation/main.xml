<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.android.example.github.ui.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/showLogs"
            app:destination="@id/motionLogFragment" />
    </fragment>

    <fragment
        android:id="@+id/motionLogFragment"
        android:name="com.android.example.github.ui.home.MotionLogFragment"
        android:label="MotionLogFragment">
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.android.example.github.ui.search.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/showRepo"
            app:destination="@id/repoFragment" />
    </fragment>

    <fragment
        android:id="@+id/repoFragment"
        android:name="com.android.example.github.ui.repo.RepoFragment"
        android:label="RepoFragment">
        <argument
            android:name="owner"
            app:argType="string" />
        <argument
            android:name="name"
            app:argType="string" />
        <action
            android:id="@+id/showUser"
            app:destination="@id/userFragment" />
    </fragment>

    <fragment
        android:id="@+id/userFragment"
        android:name="com.android.example.github.ui.user.UserFragment"
        android:label="UserFragment">
        <argument
            android:name="login"
            app:argType="string" />
        <argument
            android:name="avatarUrl"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/showRepo"
            app:destination="@id/repoFragment" />
    </fragment>
</navigation>